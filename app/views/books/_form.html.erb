<%= form_with(model: book) do |form| %>
  <% if book.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :publication_date, style: "display: block" %>
    <%= form.date_field :publication_date %>
  </div>

  <div>
    <%= form.label :author_id, style: "display: block" %>
    <%= form.collection_select :author_id, Author.all, :id, :name, prompt:"Choisissez un auteur" %>
  </div>

  <div>
    <%= form.label :pages, style: "display: block" %>
    <%= form.number_field :pages %>
  </div>

  <div>
    <%= form.label :genre_id, style: "display: block" %>
    <%= form.collection_select :genre_id, Genre.all, :id, :name, prompt:"Choisissez un genre" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
